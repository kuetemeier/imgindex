root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,json,md,rst,html,go}]
indent_style = tab
charset = utf-8

[*.{md,rst}]
charset = utf-8
trim_trailing_whitespace = false
indent_style = space

[*.py]
charset = utf-8
indent_size = 4

[Makefile]
charset = utf-8
indent_style = tab

[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
